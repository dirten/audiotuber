#!/usr/bin/env perl

use strict;
use warnings;

use Getopt::Long;
use App::PhotoDB;

# Read in our command line options
my %params = ();
GetOptions ( \%params,
	"mp3|m=s",      # MP3 file
	"image|i=s",    # image file
	"title|t=s",    # track title
	"artist|a=s",   # artist
	"composer|c=s", # composer
	"ffmpeg|f=s",   # path to ffmpeg
) or die("Error in command line arguments\n");

my $ffmpeg = $params{ffmpeg} // 'ffmpeg';
